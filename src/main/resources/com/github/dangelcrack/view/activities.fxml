<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.dangelcrack.controller.UsuarioController"
            prefHeight="654.0" prefWidth="1105.0"
            style="-fx-background-color: linear-gradient(to bottom, #1e90ff, #ff69b4);">

    <VBox alignment="CENTER" spacing="10.0"
          style="-fx-pref-width: 300px; -fx-pref-height: 450px; -fx-background-color: rgba(255, 255, 255, 0.8);
                 -fx-padding: 10; -fx-background-radius: 15; -fx-border-radius: 15;"
          AnchorPane.leftAnchor="400" AnchorPane.rightAnchor="400" AnchorPane.topAnchor="100"
          AnchorPane.bottomAnchor="100">

        <Label text="Editar Perfil" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff69b4;"/>

        <Label text="Nombre:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <TextField fx:id="nombreField" promptText="Ingresa tu nombre"
                   style="-fx-padding: 8; -fx-background-radius: 10;"/>

        <Label text="Email:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <TextField fx:id="emailField" promptText="Ingresa tu correo"
                   style="-fx-padding: 8; -fx-background-radius: 10;"/>

        <Label text="Contraseña:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <PasswordField fx:id="contraseñaField" promptText="Ingresa nueva contraseña"
                       style="-fx-padding: 8; -fx-background-radius: 10;"/>

        <HBox alignment="CENTER" spacing="15.0">
            <Button fx:id="guardarButton" onAction="#handleGuardar" text="Guardar Cambios"
                    style="-fx-font-size: 14px; -fx-background-color: #1e90ff; -fx-text-fill: white;
                           -fx-padding: 10 20; -fx-background-radius: 20; -fx-border-radius: 20;
                           -fx-cursor: hand;"/>
            <Button fx:id="cancelarButton" onAction="#handleCancelar" text="Cancelar"
                    style="-fx-font-size: 14px; -fx-background-color: #ff69b4; -fx-text-fill: white;
                           -fx-padding: 10 20; -fx-background-radius: 20; -fx-border-radius: 20;
                           -fx-cursor: hand;"/>
        </HBox>
    </VBox>
</AnchorPane>
