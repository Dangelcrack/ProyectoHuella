<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" alignment="CENTER" prefHeight="347.0" prefWidth="729.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.github.dangelcrack.controller.HuellaController">
    <children>
        <TableView fx:id="tableView" editable="true" maxWidth="1000.0" minWidth="1000.0" prefWidth="1000.0"
                   style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: transparent; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;">
            <columns>
                <TableColumn fx:id="valorColumn" maxWidth="1000.0" prefWidth="100.0" resizable="false" text="Valor"/>
                <TableColumn fx:id="unidadColumn" maxWidth="1000.0" prefWidth="110.0" resizable="false"
                             text="Unidad"/>
                <TableColumn fx:id="fechaColumn" maxWidth="446.0" minWidth="392.0" prefWidth="392.0" resizable="false"
                             text="Fecha"/>
                <TableColumn fx:id="actividadColumn" maxWidth="315.0" minWidth="105.0" prefWidth="184.0" resizable="false"
                             text="Actividad"/>
            </columns>
        </TableView>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button mnemonicParsing="false" onAction="#addHuella"
                        style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;"
                        text="Add">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#deleteHuella"
                        style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;"
                        text="Delete">
                    <HBox.margin>
                        <Insets left="100.0"/>
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#editHuella"
                        style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;"
                        text="Edit">
                    <HBox.margin>
                        <Insets left="100.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
