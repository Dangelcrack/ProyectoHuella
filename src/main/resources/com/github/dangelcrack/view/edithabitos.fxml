<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="vbox" alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.github.dangelcrack.controller.EditHabitoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <ComboBox fx:id="habitoComboBox" promptText="Selecciona una huella"/>
        <TextField fx:id="frecuencia" promptText="Introduce la frecuencia"/>
        <ComboBox fx:id="tipoFrecuencia" promptText="Selecciona un tipo de frecuencia"/>
        <ComboBox fx:id="actividad" promptText="Selecciona una actividad"/>
        <DatePicker fx:id="fecha"/>
        <Button text="Guardar" onAction="#closeWindow"/>
    </children>
</VBox>